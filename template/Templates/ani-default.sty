% ==========================================
% Custom LaTeX Style File: mystyle.sty
% Contains reusable packages & configurations
% ==========================================

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mystyle}[2024/05/15 Custom Style for Group Theory Project]

% --- Geometry & Page Layout ---
\RequirePackage[a4paper, total={170mm,257mm}, left=20mm, top=20mm, right=20mm, bottom=23mm]{geometry}
\RequirePackage{pgfpages}
\pgfpagesdeclarelayout{boxed}{
    \edef\pgfpageoptionborder{0pt}
}{
    \pgfpagesphysicalpageoptions{logical pages=1}
    \pgfpageslogicalpageoptions{1}{
        border code=\pgfsetlinewidth{2pt}\pgfstroke,
        border shrink=\pgfpageoptionborder,
        resized width=.95\pgfphysicalwidth,
        resized height=.95\pgfphysicalheight,
        center=\pgfpoint{.5\pgfphysicalwidth}{.5\pgfphysicalheight}
    }
}
\pgfpagesuselayout{boxed}

% --- Graphics & Figures ---
\RequirePackage{tikz, pgfplots}
\usetikzlibrary{positioning, shapes, arrows}
\pgfplotsset{compat=1.18}
\RequirePackage{graphicx, float, subfig, wrapfig}

% --- Math & Equations ---
\RequirePackage{amsmath, amssymb, empheq}
\RequirePackage{mathtools} % Optional (enhances amsmath)

% --- Sections & Formatting ---
\RequirePackage[Glenn]{fncychap}
\RequirePackage{sectsty}
\sectionfont{\Huge\color[HTML]{0067B3}}
\subsectionfont{\Large\color[HTML]{AE0000}}
\subsubsectionfont{\large\color[HTML]{123175}}

% --- Tables ---
\RequirePackage{caption, colortbl, booktabs}

% --- Hyperlinks (load near the end) ---
\RequirePackage{hyperref}
\hypersetup{
    colorlinks=true,
    linkcolor=violet,
    urlcolor=red,
}

% --- Page Style & Footer ---
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\cfoot{\thepage}
\lfoot{Project by \color[HTML]{AE0000}Aniruddha Sarkar}

% --- Custom Commands (if any) ---
\newcommand{\pmark}[1]{\begin{tikzpicture}[overlay,remember picture]\node(#1)at (-1em,.7ex){};\end{tikzpicture}}
\newcommand{\smark}[1]{\begin{tikzpicture}[overlay,remember picture]\draw(#1)--(0,.7ex);\end{tikzpicture}}

% --- Misc ---
\setlength\parindent{0pt}
